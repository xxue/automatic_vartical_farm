<div class="row">
  <div class="col-xs-6 col-xs-offset-5">
    <h2 style="font-size:35px; margin-left: 20px">Log In</h2><br>
  </div>
</div>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="form-inputs">
    <div class="form-inputs">
      <div class="row">
      <div class="col-xs-7 col-xs-offset-4 text-left">
          <%= f.input :email, required: false, autofocus: true, :label => 'Email', :label_html => { :class => 'myformlabel' }, :input_html => { :class => 'forminput'} %><br>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-7 col-xs-offset-4 text-left">
        <%= f.input :password, :label => 'Password', :label_html => { :class => 'myformlabel' }, :input_html => { :class => 'forminput'}, required: false %><br>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-7 col-xs-offset-4 text-left">
        <%= f.input :remember_me, :label_html => { :style => 'font-size:18px; margin-left: 20px' }, as: :boolean if devise_mapping.rememberable?%>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="col-xs-7 col-xs-offset-5 text-left">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "Forgot your password?", new_password_path(resource_name), {:class => "forget"} %><br /><br>
  <% end -%>
</div>
</div>


  <div class="form-actions">
    <div class="row">
    <div class="col-xs-4 col-xs-offset-2 text-right">
      <%= f.button :submit, "Log In", :class => 'btn btn-primary btn-lg'%>
    </div>
    <% end %>
    <div class="col-xs-2 text-left">
    <%= render "devise/shared/links" %>
    </div>
    </div>
  </div>
