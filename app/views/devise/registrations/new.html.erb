<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

      <div class="row">
        <div class="col-xs-6 col-xs-offset-5">
          <h2 style="font-size:35px; margin-left:20px">Sign Up</h2><br>
        </div>
      </div>


      <div class="form-inputs">
        <div class="row">
        <div class="col-xs-7 col-xs-offset-4 text-left">
            <%= f.input :email, required: true, autofocus: true, :label => 'Email', :label_html => { :class => 'myformlabel' }, :input_html => { :class => 'forminput'} %><br>
        </div>
      </div>

      <div class="row">
        <div class="col-xs-7 col-xs-offset-4 text-left">
          <%= f.input :password, :label => 'Password', :label_html => { :class => 'myformlabel' }, :input_html => { :class => 'forminput'}, required: true, hint: ("            #{@minimum_password_length} characters minimum   " if @minimum_password_length)  %><br>
        </div>
        <div class="col-xs-7 col-xs-offset-4 text-left">
          <%= f.input :password_confirmation, :label => 'Retype password', :label_html => { :class => 'myformlabel' }, :input_html => { :class => 'forminput'}, required: true %><br>
          <br>
        </div>
      </div>
    </div>

      <div class="form-actions">
        <div class="row">
          <div class="col-xs-4 col-xs-offset-2 text-right">
            <%= f.button :submit, "Sign up", :class => 'btn btn-primary btn-lg'%>
          </div>
            <% end %>
        <div class="col-xs-2 text-left">
            <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
